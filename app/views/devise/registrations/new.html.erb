<html>

  <body id="LoginForm">

    <div class="container">

      <div class="login-form">

        <div class="main-div">

          <div class="panel">

            <h2>Sign up</h2>
            <p>Please enter your email and password</p>

          </div>

            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= devise_error_messages! %>

              <div class="form">
                <%= f.email_field :email, autocomplete: "email", placeholder: "Email", class: "form-control" %>
              </div>

              <div class="form">
                <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: "form-control" %>
              </div>

              <div class="field">
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Confirm password" %>
              </div>

              <button type="submit" class="btn sign-in">Sign up</button>

              <br><%= link_to "Already have an account?", new_session_path(resource_name), class: "sign-up" %>

            <% end %>

        </div>

      </div>

    </div>

  </body>

</html>
