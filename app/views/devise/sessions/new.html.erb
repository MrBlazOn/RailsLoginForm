<html>

  <body id="LoginForm">

    <div class="container">

      <div class="login-form">

        <div class="main-div">

          <div class="panel">

            <h2>Admin Login</h2>
            <p>Please enter your email and password</p>

          </div>

            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <p><%= alert %></p>

              <div class="form">
                <%= f.email_field :email, autocomplete: "email", placeholder: "Email", class: "form-control" %>
              </div>

              <div class="form">
                <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: "form-control" %>
              </div>

              <button type="submit" class="btn sign-in">Login</button>

              <br><%= link_to "Do not have an account?", new_registration_path(resource_name), class: "sign-up" %>

            <% end %>

        </div>

      </div>

    </div>

  </body>

</html>